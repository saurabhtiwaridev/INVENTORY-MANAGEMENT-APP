<h1 class="mt-5 mb-4 header">Update Product</h1>

<% if(errorMessage){ %>
<div class="alert alert-danger" role="alert"><%= erorMessage %></div>
<% } %>

<form method="post" action="/update-product" enctype="multipart/form-data">
  <input
    type="text"
    class="form-control"
    hidden
    name="id"
    value="<%=product.id %>"
    id="id"
  />
  <div class="mb-3">
    <label for="name" class="form-label">Product Name</label>
    <input
      type="text"
      class="form-control"
      name="name"
      value="<%=product.name %>"
      id="productName"
    />
  </div>
  <div class="mb-3">
    <label for="desc">Product Description</label>
    <textarea class="form-control" id="desc" name="desc">
<%=product.desc %></textarea
    >
  </div>
  <div class="mb-3">
    <label for="price" class="form-label">Product Price</label>
    <input
      type="number"
      class="form-control"
      id="price"
      value="<%=product.price %>"
      name="price"
    />
  </div>
  <div class="mb-3">
    <img src="<%=product.imageUrl %>" alt="productImage" />
    <label for="imageUrl" class="form-label">Product Image</label>
    <input
      type="file"
      class="form-control"
      id="imageUrl"
      name="imageUrl"
      accept="images/*"
    />
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
</form>
